{
    "manifest_version": 3,
    "name": "AttritionBot",
    "version": "1.0.0",
    "description": "AI-powered attrition analysis assistant with WhatsApp-themed interface",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Toggle AttritionBot",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*successfactors*/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "overlay.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "chat.html",
                "icons/icon16.png",
                "icons/icon32.png",
                "icons/icon48.png",
                "icons/icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}