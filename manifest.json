{
    "manifest_version": 3,
    "name": "AttritionAI",
    "version": "1.0.0",
    "description": "AI-powered attrition analysis assistant with WhatsApp-themed interface",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Toggle AttritionAI"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "overlay.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "chat.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}